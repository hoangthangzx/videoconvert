<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@color/transparent"
    android:layout_marginEnd="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imvVideo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percents_10" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/black_70"
        app:layout_constraintStart_toStartOf="@+id/imvVideo"
        app:layout_constraintTop_toTopOf="@+id/imvVideo"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percents_20" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="9sp"

        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
        tools:ignore="HardcodedText,SmallSp" />


    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_26_6_seconds"
        android:textSize="10sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imvVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/black_30"
        app:layout_constraintBottom_toBottomOf="@+id/imvVideo"
        app:layout_constraintEnd_toEndOf="@+id/imvVideo"
        app:layout_constraintStart_toStartOf="@+id/imvVideo"
        app:layout_constraintTop_toTopOf="@+id/imvVideo"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percents_10" />
    
</androidx.constraintlayout.widget.ConstraintLayout>